{% extends '::base.html.twig' %}

{% form_theme edit_form 'OrangeMainBundle:FormTheme:fields.html.twig' %}

{% block content -%}
<!-- heading -->
<div class="heading">
	<h3>{% block page_title %} Modification type{% endblock %}</h3>                    
</div>
<!-- End .heading-->
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
			    <h4> 
			        <span>Modifier un type</span>
			    </h4>
			</div>
			<div class="panel-body">
				<form novalidate="novalidate" class="form-horizontal" action="{{ path('modifier_type_action', {'id':entity.id})}}" method="post" role="form">
					<div class="form-group">
						{{ form_widget(edit_form.type,  {'attr': {'class': 'nostyle form-control'}}) }}
						{% if is_granted('ROLE_SUPER_ADMIN') %}
						{{ form_widget(edit_form.bu,  {'attr': {'class': 'nostyle form-control'}}) }}
						{% endif %}
					</div>
					<div class="form-group">
							<label class="col-lg-3 control-label" for="picker">Couleur :</label>
							<div class="col-lg-9">
								<input type="text" id="color" name="{{ edit_form.couleur.vars.full_name }}" value="#123456" class="form-control" />
								<div class="picker"></div>
							</div>
					</div>
						{{ form_widget(edit_form._token) }}
						<!-- End .form-group  -->
					 <div class="form-group">
						<div class="col-lg-offset-2 col-lg-9">
						     {{ form_widget(edit_form.add) }}
						     {{ form_widget(edit_form.cancel, {attr: {class: 'btn btn-die'}}) }}
						</div>
					</div><!-- End .form-group  -->  
				</form>
			</div>
		</div><!-- End .panel -->
	</div><!-- End .span6 -->
</div>
{% endblock %}

{% block pagescript %}
	<script type="text/javascript">
		$(document).ready(function(){
			$('#orange_mainbundle_typeaction_bu').removeAttr("multiple");
		});
	</script>
{% endblock %}
